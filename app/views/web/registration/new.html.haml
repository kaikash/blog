= simple_form_for User.new, url: web_registration_path, html: {class: 'form-horizontal'} do |f|
  - if @user.errors.any?
    .alert.alert-danger
      %a.close{"data-dismiss" => "alert"} Ã—
      = @user.errors.full_messages[0]
  .form-group
    = f.label :username, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :username, class: 'form-control', placeholder: 'Username'
  .form-group
    = f.label :email, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :email, class: 'form-control', placeholder: 'Email'
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control', placeholder: 'Name'
  .form-group
    = f.label :surname, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :surname, class: 'form-control', placeholder: 'Surname'
  .form-group
    = f.label :password, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.input_field :password, class: 'form-control', type: :password, placeholder: 'Password'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Sign up", class: 'btn btn-default'



