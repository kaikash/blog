= simple_form_for UserForm.new, url: web_session_path, html: {class: 'form-horizontal'} do |f|
  - if @user.errors.any?
    .alert.alert-danger
      %a.close{"data-dismiss" => "alert"} Ã—
      = @user.errors.full_messages[0]
  .form-group
    = f.label :login, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :login, class: 'form-control', placeholder: 'Username or Email'
  .form-group
    = f.label :password, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.input_field :password, class: 'form-control', type: :password, placeholder: 'Password'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Sign in", class: 'btn btn-default'

